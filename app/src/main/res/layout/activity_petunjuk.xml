<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.petunjuk">




    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_petunjuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/abuBiru"
            android:elevation="5dp"
            android:minHeight="?attr/actionBarSize"
            app:title="Petunjuk Aplikasi" />
    </com.google.android.material.appbar.AppBarLayout>



    <TextView
        android:id="@+id/satu"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#454545"
        android:textStyle="bold"
        android:text="PETUNJUK PENGGUNAAN APLIKASI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <TextView
        android:layout_marginTop="170dp"
        android:id="@+id/empat"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="1. Masuk Halaman Utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_below="@+id/empat"
        android:layout_marginTop="10dp"
        android:id="@+id/lima"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="2. Menu Scan Untuk Scan Qr-Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_below="@+id/lima"
        android:layout_marginTop="10dp"
        android:id="@+id/enam"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="3. Menu Petunjuk Untuk Melihat Petunjuk Penggunaan Aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_below="@+id/enam"
        android:layout_marginTop="10dp"
        android:id="@+id/tujuh"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="4. Menu Tentang Untuk Menampilkan Informasi Aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/tujuh"
        android:layout_marginTop="10dp"
        android:id="@+id/delapan"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"

        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#454545"
        android:text="5. Menu Keluar Untuk Keluar Aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>